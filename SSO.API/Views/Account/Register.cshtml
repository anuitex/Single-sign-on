@using SSO.API.Models.AccountViewModels;
@using SSO.DataAccess.Entities;
@model RegisterAccountView
@{
    ViewData["Title"] = "Register";
}

<h2>@ViewData["Title"]</h2>

<div class="row">
    <div class="col-md-4">
        <div>
            <input id="returnUrl" name="returnUrl" value="@Model.ReturnUrl" class="hidden" />
            <h4>Create a new account.</h4>
            <hr />
            <div id="validation-errors"></div>
            <div class="form-group">
                <label for="email"></label>
                <input id="email" name="email" class="form-control" />
            </div>
            <div class="form-group">
                <label for="password"></label>
                <input type="password" id="password" name="password" class="form-control" />
            </div>
            <div class="form-group">
                <label for="confirmPassword"></label>
                <input type="password" id="confirmPassword" name="confirmPassword" class="form-control" />
            </div>
            <button type="submit" onclick="registerVM.register()" class="btn btn-default">Register</button>
        </div>
    </div>
</div>

@section Scripts {
    <script src="~/js/account/register.js"></script>
}
