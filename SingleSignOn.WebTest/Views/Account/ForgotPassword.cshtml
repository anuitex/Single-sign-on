        @using (Html.BeginForm("ForgotPassword", "Account", FormMethod.Post, new { enctype = "multipart/form-data" }))
        {
            @*<div class="modal-body">*@
                <div class="login-form">
                    @Html.AntiForgeryToken()

                    @Html.Label("E-mail")
                    @Html.TextBoxFor(model => Model.Email, new { @class = "form-control", @id = "forgotEmailInput" })
                    @*<p id="sendEmailSuccess">Please check your registered email account for reset instructions</p>
                    <p id="sendEmailError">Please enter correct mail!</p>*@
                </div>
            @*</div>*@
            <div class="modal-footer submit-button">
                <button type="submit" @*onclick="return validateForm()"*@ class="btn blue-btn" id="sendForgotEmail">Send</button>
            </div>
        }

    </div>
</div>

@section Scripts {
    @await Html.PartialAsync("_ValidationScriptsPartial")
}
